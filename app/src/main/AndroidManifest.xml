<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.sparksoft.smartguardwatch">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="ANDROID.PERMISSION.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity" />
        <activity android:name=".NavigateActivity" />

        <service
            android:name=".Services.FallService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Services.SmartGuardService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Services.ChargingService"
            android:enabled="true"
            android:exported="true" />
        <!--
        <receiver android:name=".Listeners.PhoneStateReceiver" >
            <intent-filter android:priority="0" >
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>
        -->
        <receiver android:name=".Listeners.BatteryStatus">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".Listeners.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="StartMyServiceAtBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".SOSActivity"
            android:label="@string/title_activity_sos" />
        <activity
            android:name=".SOSMessageActivity"
            android:label="@string/title_activity_sos" />
        <activity
            android:name=".ComActivity"
            android:label="@string/title_activity_com" />

        <service
            android:name=".Services.AlarmService"
            android:exported="false" />

        <activity
            android:name=".AlarmNotificationActivity"
            android:label="@string/title_activity_alarm_notification" />
        <activity
            android:name=".FitnessActivity"
            android:label="@string/title_activity_fitness" />
        <activity
            android:name=".ChargeActivity"
            android:label="@string/title_activity_charge" />
        <activity
            android:name=".MemoryActivity"
            android:label="@string/title_activity_memory" />

        <service
            android:name=".Services.LocationSensorService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera" />
        <activity
            android:name=".MedicalDataActivity"
            android:label="@string/title_activity_medical_data" />
        <activity
            android:name=".MemoryOptionsActivity"
            android:label="@string/title_activity_memory_options" />
        <activity
            android:name=".MemoryPlayActivity"
            android:label="@string/title_activity_memory_play" />
        <activity
            android:name=".MemoryRemindActivity"
            android:label="@string/title_activity_memory_remind" />
        <activity
            android:name=".InactivityActivity"
            android:label="@string/title_activity_inactivity" />
        <activity
            android:name=".FitminutesActivity"
            android:label="@string/title_activity_fitminutes" />
        <activity
            android:name=".DeviceLostActivity"
            android:label="@string/title_activity_device_lost" />
        <activity
            android:name=".WeightActivity"
            android:label="@string/title_activity_weight" />
        <activity
            android:name=".CoachingActivity"
            android:label="@string/title_activity_coaching" />

        <service
            android:name=".Services.MemoryAlarmService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>
