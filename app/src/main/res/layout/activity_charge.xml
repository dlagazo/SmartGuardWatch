<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.sparksoft.smartguardwatch.ChargeActivity"
    android:background="@color/black"
    android:orientation="vertical"
    android:id="@+id/llChargeScreen"
    >

    <TextView android:text="Charging correctly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20px"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/tvChargeText"/>
    <TextView android:text="0%"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/tvBatteryLevel"/>

</LinearLayout>
